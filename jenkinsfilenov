pipeline {
    agent any 
    stages {
        stage('clone-repo') { 
            steps {
                bat "git clone https://github.com/pknowledge/my-app.git"
                bat "mvn clean -f my-app"
             //   bat 'start cmd.exe /c date'
            }
        }
        stage('Test') { 
            steps {
                bat "mvn test -f my-app" 
               // bat 'start cmd.exe /c time'
            }
        }
        stage('Deploy') { 
            steps {
              bat "mvn package -f my-app" 
             // bat 'start cmd.exe /c dir'
            }
        }
    }
}
